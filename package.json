{
  "name": "redux-msr",
  "version": "0.0.0",
  "description": "Merge sub reducers wihtout splitting the Redux store",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:dev": "npm run-script test -- --watch",
    "flow": "flow check",
    "flow:install": "flow-typed install",
    "lint": "semistandard --verbose | snazzy",
    "lint:fix": "semistandard --fix",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "npm run preversion && npm run build"
  },
  "keywords": [
    "redux",
    "reducer"
  ],
  "author": "Tom Gallacher <thomas.gallacher@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^6.5.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.0.1",
    "eslint-plugin-flowtype": "^2.49.3",
    "flow-bin": "^0.75.0",
    "flow-typed": "^2.4.0",
    "jest": "^23.3.0",
    "jest-extended": "^0.7.2",
    "parcel-bundler": "^1.9.5",
    "regenerator-runtime": "^0.12.0",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1"
  },
  "dependencies": {},
  "files": [
    "dist/"
  ],
  "jest": {
    "setupTestFrameworkScriptFile": "jest-extended"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "flow-typed",
      "flowtypes.js"
    ],
    "plugins": [
      "flowtype"
    ],
    "extends": [
      "plugin:flowtype/recommended"
    ]
  }
}
