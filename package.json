{
  "name": "redux-msr",
  "version": "0.1.0",
  "description": "Merge resource sub reducers wihtout slicing the Redux state",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack --config ./webpack.prod.js",
    "build:dev": "webpack --config ./webpack.dev.js",
    "test": "jest --config ./.jest.config.js",
    "test:dev": "npm run-script test -- --watch",
    "flow": "flow check",
    "flow:install": "flow-typed install",
    "lint": "semistandard --verbose | snazzy",
    "lint:fix": "semistandard --fix",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "npm run preversion && npm run build"
  },
  "keywords": [
    "redux",
    "reducer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tgallacher/redux-msr.git"
  },
  "author": "Tom Gallacher <thomas.gallacher@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.8.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "flow-bin": "^0.75.0",
    "flow-typed": "^2.5.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {},
  "semistandard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "ignore": [
      "flow-typed",
      "flowtypes.js"
    ],
    "plugins": [
      "flowtype"
    ],
    "extends": [
      "plugin:flowtype/recommended"
    ]
  }
}
