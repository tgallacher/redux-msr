{
  "name": "redux-msr",
  "version": "0.1.0",
  "description": "Merge resource sub reducers wihtout slicing the Redux state",
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack --config ./webpack.prod.js",
    "build:dev": "webpack --config ./webpack.dev.js",
    "test": "jest",
    "test:dev": "npm run-script test -- --watch",
    "flow": "flow check",
    "flow:install": "flow-typed install",
    "lint": "semistandard --verbose | snazzy",
    "lint:fix": "semistandard --fix",
    "preversion": "npm run lint && npm test",
    "prepublishOnly": "npm run preversion && npm run build"
  },
  "keywords": [
    "redux",
    "reducer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tgallacher/redux-msr.git"
  },
  "author": "Tom Gallacher <tgallacher@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^3.1.0",
    "flow-bin": "^0.75.0",
    "flow-typed": "^2.5.1",
    "jest": "^23.5.0",
    "jest-extended": "^0.7.2",
    "regenerator-runtime": "^0.12.1",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4"
  },
  "peerDependencies": {
    "redux": "^4.0.0"
  },
  "dependencies": {},
  "jest": {
    "setupTestFrameworkScriptFile": "jest-extended"
  },
  "semistandard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "it",
      "expect",
      "describe"
    ],
    "ignore": [
      "flow-typed",
      "flowtypes.js"
    ],
    "plugins": [
      "flowtype"
    ],
    "extends": [
      "plugin:flowtype/recommended"
    ]
  }
}
